	task test
		requires task build

		mkdir {outputdir}/boot
		each file in {../assets/raspi/boot/*.*}
			run cp -r {file} {outputdir}/boot/{file.file}

		run {qemu} -no-reboot -M {qemu_model} -serial stdio -kernel {outputdir}/{kernel_filename}

